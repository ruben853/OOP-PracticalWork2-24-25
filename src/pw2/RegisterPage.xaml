<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="practicalwork2.RegisterPage">
    <VerticalStackLayout Padding="20" Spacing="10">
        <Label Text="Register New User" FontSize="28" HorizontalOptions="Center" BackgroundColor="#3B5360" TextColor="White" Padding="10"/>

        <Entry x:Name="NameEntry" Placeholder="Enter your name" />
        <Entry x:Name="UsernameEntry" Placeholder="Enter a unique username" />
        <Entry x:Name="PasswordEntry" IsPassword="True" Placeholder="Enter your password" />
        <Entry x:Name="ConfirmPasswordEntry" IsPassword="True" Placeholder="Confirm password" />

        <CheckBox x:Name="PolicyCheckBox" />
        <Label Text="I agree to the protection policy."/>

        <Button Text="Register" Clicked="OnRegisterClicked" />
        <Button Text="Back" Clicked="OnBackClicked" />
    </VerticalStackLayout>
</ContentPage>